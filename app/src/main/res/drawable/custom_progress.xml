<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background" android:gravity="center_vertical|fill_horizontal">
        <shape android:shape="rectangle">
            <solid android:color="?attr/backgroundColorCustomProgress" />
            <corners android:radius="?attr/heightCustomProgress" />
            <size android:height="?attr/heightCustomProgress" />
        </shape>
    </item>

    <item android:id="@android:id/progress" android:gravity="center_vertical|fill_horizontal">
        <scale android:scaleWidth="100%">
            <shape android:shape="rectangle">
                <solid android:color="?attr/foregroundColorCustomProgress" />
                <corners android:radius="?attr/heightCustomProgress" />
                <size android:height="?attr/heightCustomProgress" />
            </shape>
        </scale>
    </item>

</layer-list>