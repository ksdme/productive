<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="App">
        <item name="android:fontFamily">@font/open_sans</item>
    </style>

    <style name="App.CustomProgress" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/custom_progress</item>
        <item name="android:layout_margin">@dimen/zero</item>
    </style>

    <style name="App.AppIconLabel" parent="TextAppearance.AppCompat.Title">
        <item name="android:color">@android:color/black</item>
        <item name="android:fontFamily">?attr/appLabelFontFamily</item>
    </style>

    <style name="App.SearchTextEdit" parent="Widget.AppCompat.EditText">
        <item name="android:paddingTop">@dimen/spacingThree</item>
        <item name="android:paddingBottom">@dimen/spacingThree</item>
        <item name="android:paddingStart">@dimen/spacingFour</item>
        <item name="android:paddingEnd">@dimen/spacingFour</item>
        <item name="android:background">@drawable/bg_edit_text_rounded_rect</item>
        <item name="android:fontFamily">?attr/searchEditTextFontFamily</item>
    </style>

</resources>